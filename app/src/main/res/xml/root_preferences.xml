<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Display Settings">

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="Saturation"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="System configuration">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Turn off mBack hardware feedback" />

        <SwitchPreferenceCompat
            app:key="attachment"
            app:summaryOff="Turns on specific overlay on each corner, requires reboot to be in effect"
            app:summaryOn="Corner overlay is turned on, if you cannot see the change, please reboot your device"
            app:title="Rounded corners" />

    </PreferenceCategory>
</PreferenceScreen>